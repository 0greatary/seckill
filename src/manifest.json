{
  "name": "秒杀助手",
  "description": "购物秒杀辅助，提升秒杀几率！",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "notifications",
    "activeTab",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
    "js/jquery.min.js",
    "js/utils.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js": ["js/newTask.js"],
      "css" : ["css/form.css"]
    }
  ],
  "browser_action": {
    "default_icon": "images/seckill-16.png",
    "default_title": "秒杀助手",
    "default_popup": "index.html"
  },
  "manifest_version": 2
}

